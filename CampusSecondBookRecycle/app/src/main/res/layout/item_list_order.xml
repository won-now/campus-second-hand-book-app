<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="订单编号："/>
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            tools:text="55555555555555"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="订单状态："/>
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="已完成"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <Button
                android:id="@+id/bt_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorSearchBackground"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone"
                android:text="取消订单"
                android:layout_alignRight="@+id/bt_pay"
                android:layout_marginRight="120dp" />

            <Button
                android:id="@+id/bt_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorSearchBackground"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone"
                android:text="支付订单"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginSize" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorSearchBackground"/>
        <TextView
            android:id="@+id/tv_order_numberOfbook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="2"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTab"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个商品"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTab"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/colorSearchBackground"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_orderOfBookList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorSearchBackground"/>
        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="2019-11-24"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTab"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/colorSearchBackground"/>
    </LinearLayout>
</LinearLayout>