<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/searchMarginSize"
    android:layout_marginRight="@dimen/searchMarginSize"
    android:background="@drawable/background_search_view"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/searchMarginSize"
        android:layout_marginLeft="@dimen/searchMarginSize"
        android:src="@drawable/search"/>

    <EditText
        android:id="@+id/et_content"
        android:background="@color/colorSearchBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        tools:hint="搜索"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_cancle"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cancle"/>

</LinearLayout>